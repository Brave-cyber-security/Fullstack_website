    <!-- CTA Section -->
    <section class="cta section">
      <div class="container">
        <div class="cta-content text-center">
          <h2>Need Technical Support?</h2>
          <p>Get started with our professional IT support services today.</p>
          <% if (currentUser) { %>
            <a href="/customer/support/new" class="btn btn-primary btn-lg">Submit Support Request</a>
          <% } else { %>
            <a href="/signup" class="btn btn-primary btn-lg">Create Account</a>
          <% } %>
        </div>
      </div>
    </section>
  </main>
  
  <%- include('partials/footer') %>
  
  <script src="/js/main.js"></script>
