<% if (isAdmin && !isMaster) { %>
  <!-- Admin users get the sidebar layout -->
  <!-- This will be handled by admin-header.ejs -->
<% } else { %>
  <!-- Regular users and masters get the traditional navbar -->
  <header class="header">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a href="/" class="brand-link">
            <h1>Dern-Support</h1>
          </a>
        </div>
        
        <div class="navbar-menu">
          <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/#services">Services</a></li>
            <li><a href="/knowledge/search">Knowledge Base</a></li>
            <% if (currentUser) { %>
              <% if (isMaster) { %>
                <li><a href="/master/dashboard">Master Dashboard</a></li>
              <% } else if (isAdmin) { %>
                <li><a href="/admin/dashboard">Admin Dashboard</a></li>
              <% } else { %>
                <li><a href="/customer/dashboard">Dashboard</a></li>
              <% } %>
              <li><a href="/logout" class="btn btn-sm btn-outline-primary">Logout</a></li>
            <% } else { %>
              <li><a href="/login">Login</a></li>
              <li><a href="/signup" class="btn btn-sm btn-primary">Sign Up</a></li>
            <% } %>
          </ul>
        </div>
        
        <!-- Mobile menu toggle -->
        <div class="mobile-menu-toggle">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </nav>
  </header>
<% } %>
